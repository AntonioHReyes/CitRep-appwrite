<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_image"
        android:layout_width="@dimen/image_small_size"
        android:layout_height="@dimen/image_small_size"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/complain_description"
        style="@style/HomeToolbarText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/spacing_5"
        android:layout_marginHorizontal="@dimen/spacing_5"
        android:background="@drawable/bg_input_complain"
        android:gravity="center"
        android:text="@string/complain_description"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/avatar_image"
        app:layout_constraintEnd_toStartOf="@+id/load_file"
        app:layout_constraintStart_toEndOf="@id/avatar_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/load_file"
        android:layout_width="@dimen/image_small_size"
        android:layout_height="@dimen/image_small_size"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="@color/pink"
        android:padding="@dimen/spacing_10"
        android:src="@drawable/ic_baseline_attach_file_24"
        app:layout_constraintBottom_toBottomOf="@id/avatar_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>